{
  "name": "ze_delivery_api",
  "main": "src/server.js",
  "version": "1.0.0",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "tsnd --watch \"./src/**\" ./src/server.ts",
    "predev": "npm run db:reset",
    "test": "mocha -r ts-node/register ./src/tests/**/*$NAME*.test.ts -t 10000 --exit",
    "lint": "tsc && eslint . --ext .ts",
    "db:reset": "npx -y tsc && npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "test:coverage": "nyc --all --include src/models --include src/services --include src/controllers npm run test"
  },
  "devDependencies": {
    "@types/chai": "4.3.4",
    "@types/chai-http": "4.2.0",
    "@types/express": "4.17.1",
    "@types/mocha": "10.0.1",
    "@types/node": "16.11.31",
    "@types/sequelize": "4.28.14",
    "@types/sinon": "10.0.14",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "chai": "4.3.7",
    "chai-http": "4.3.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "15.0.0",
    "eslint-plugin-editorconfig": "4.0.2",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-mocha": "9.0.0",
    "eslint-plugin-sonarjs": "0.10.0",
    "mocha": "10.2.0",
    "nyc": "15.1.0",
    "sequelize-cli": "6.2.0",
    "sinon": "15.0.4",
    "ts-node-dev": "1.1.8"
  },
  "dependencies": {
    "express": "4.18.2",
    "mysql2": "2.3.0",
    "sequelize": "6.31.0",
    "typescript": "4.4.4"
  }
}
